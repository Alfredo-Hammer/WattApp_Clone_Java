<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.vistas.cuentas.RecuperarContraseniaActivity">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_circular"
        android:src="@drawable/ic_baseline_arrow_back"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_call_white"
        android:layout_marginTop="50dp"
        android:contentDescription="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor escribir su correo, le eviaremos\nun correo para recuperar su contraseÃ±a  "
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtRecuperarContrasenia"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:drawableStart="@drawable/ic_baseline_email"
        android:drawablePadding="10dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_txt"
        android:hint="Correo"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnviarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_entrar"
        android:enabled="false"
        android:text="enviar correo"/>

</LinearLayout>