<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.vistas.AjustesActivity">

    <RelativeLayout
        android:id="@+id/toolbarAjustes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_circular"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_arrow_back"/>

        <TextView
            android:id="@+id/txtTtulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:layout_toEndOf="@id/btnBack"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            style="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameAjustes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarAjustes"/>

</RelativeLayout>